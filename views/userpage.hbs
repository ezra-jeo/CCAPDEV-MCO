
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/userpage.css">

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const filterBtn = document.querySelector(".filter-btn");
                const dropdownContent = document.querySelector(".dropdown-content");

                filterBtn.addEventListener("click", function(event) {
                    dropdownContent.classList.toggle("show");
                    event.stopPropagation(); // Prevent click from propagating to the document
                });

                // Close dropdown when clicking anywhere outside
                document.addEventListener("click", function(event) {
                    if (!filterBtn.contains(event.target) && !dropdownContent.contains(event.target)) {
                        dropdownContent.classList.remove("show");
                    }
                });
            });
        </script>
    </head>

    <body>
       <div class="user-page">
            <div class="user-box">
                <!-- Edit Profile Button -->
                <div class="edit-button">
                    <a href="/useredit.hbs">
                        <button><i class="fa-solid fa-pen"></i></button>
                    </a>
                </div>
                

                <!-- Profile Picture -->
                <div class="profile-pic">
                    <img src="/images/icon.png">
                </div>

                <!-- User Name -->
                <h5 class="username">Jane Doe</h5>

                <!-- User Description -->
                <div class="user-desc">CCS ID 123</div>

                <!-- Logout Button -->
                <a href="homepage.html">
                    <button class="logout-btn">Logout</button>
                </a>
            </div>

            <div class="review-content">
                <h1>Reviews</h1>
                <div class="review-nav">
                    <button class="review-button"><u><b>Sort by Latest</b></u></button>
                    <div class="filter-dropdown">
                        <button class="review-button filter-btn"><u><b>Filter by rating</b></u></button>
                        <div class="dropdown-content">
                            <a href="#" data-rating="5">⭐⭐⭐⭐⭐</a>
                            <a href="#" data-rating="4">⭐⭐⭐⭐</a>
                            <a href="#" data-rating="3">⭐⭐⭐</a>
                            <a href="#" data-rating="2">⭐⭐</a>
                            <a href="#" data-rating="1">⭐</a>
                        </div>
                    </div>
                    <div class ="review-search-container">
                        <input type= "text" class="review-search" placeholder="Search for a Review">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                </div>

                {{> review}}

            </div>
        </div>
    </body>
</html>