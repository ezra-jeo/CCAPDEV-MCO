<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/editorg.css">
    </head>

    <body>
        <form>
            <div class="content">
                <div class="edit-box">
                    <div class="edit-container">
                        <h5 style="font-size: 40px; margin: 0px; margin-top: 10px;">Edit Org Profile</h5>
                        <div class="profile">
                            <img class="org-profile-pic" src="https://images.ctfassets.net/61mmmjz7t2hb/LYaxJ195ZBD5yOEKXOQOR/c09ea48259f53fdf6cb9b4d0992f61eb/Untitled__4_.png">
